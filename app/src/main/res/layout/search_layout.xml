<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp">


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/coinImageSearch"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/star"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:id="@+id/rowNameCoinSearch"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="BTC"
            android:gravity="center"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:id="@+id/rowCapCoinSearch"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="397,21Bn"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/rowCoinPriceSearch"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="20.689,89"
        android:gravity="center"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/priceImageSearch"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/greenup"
        android:gravity="center"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/change24hSearch"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/green"
        android:textSize="15sp"
        android:text="%0,89"
        android:gravity="center"/>

</LinearLayout>